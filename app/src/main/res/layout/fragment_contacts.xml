<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ContactsFragment">

    <!-- 垂直滚动布局 -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- 垂直线性布局，用于容纳联系人 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <!-- 每个联系人，包括图片和姓名 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="8dp">

                <ImageView
                    android:id="@+id/contact_image1"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/sample_image_1"
                    android:contentDescription="Contact 1"
                    android:layout_marginEnd="16dp"
                    android:onClick="openContact1" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="爸爸"
                    android:textSize="18sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="8dp">

                <ImageView
                    android:id="@+id/contact_image2"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/sample_image_2"
                    android:contentDescription="Contact 2"
                    android:layout_marginEnd="16dp"
                    android:onClick="openContact2" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="妈妈"
                    android:textSize="18sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="8dp">

                <ImageView
                    android:id="@+id/contact_image3"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/sample_image_3"
                    android:contentDescription="Contact 3"
                    android:layout_marginEnd="16dp"
                    android:onClick="openContact3" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="姐姐"
                    android:textSize="18sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="8dp">

                <ImageView
                    android:id="@+id/contact_image4"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/sample_image_4"
                    android:contentDescription="Contact 4"
                    android:layout_marginEnd="16dp"
                    android:onClick="openContact4" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="弟弟"
                    android:textSize="18sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="8dp">

                <ImageView
                    android:id="@+id/contact_image5"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/sample_image_5"
                    android:contentDescription="Contact 5"
                    android:layout_marginEnd="16dp"
                    android:onClick="openContact5" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="西西"
                    android:textSize="18sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="8dp">

                <ImageView
                    android:id="@+id/contact_image6"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/sample_image_6"
                    android:contentDescription="Contact 6"
                    android:layout_marginEnd="16dp"
                    android:onClick="openContact6" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="东东"
                    android:textSize="18sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="8dp">

                <ImageView
                    android:id="@+id/contact_image7"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/sample_image_7"
                    android:contentDescription="Contact 7"
                    android:layout_marginEnd="16dp"
                    android:onClick="openContact7" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="北北"
                    android:textSize="18sp" />
            </LinearLayout>

            <!-- 可以继续添加更多的联系人项 -->

        </LinearLayout>
    </ScrollView>
</FrameLayout>
